    },
    "require-dev": {
        "phpunit/phpunit": "8",
        "squizlabs/php_codesniffer": "2.6",
        "phpdocumentor/reflection-docblock": "2.*"
    },
    "license": "GPL-2.0+",
    "authors": [
        {
            "name": "Christian Saborio",
            "email": "csaborio@scorpiotek.com"
        }
    ],
    "autoload": {
        "psr-4": {
